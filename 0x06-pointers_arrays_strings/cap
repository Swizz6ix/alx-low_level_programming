#include "holberton.h"
#include <stddef.h>
#include <stdio.h>

/**
 * upper - capitalizes a letter if it is lowercase
 * @c: pointer to a string
 * Return: pointer to string
 **/
char *upper(char *c)
{
	if (c[0] >= 'a' && c[0] <= 'z')
		c[0] -= 32;
	return (c);
}

